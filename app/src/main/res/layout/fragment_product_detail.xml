<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/card_prod_detail_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_photo_size_select_actual_black_36dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/card_prod_detail_title"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:text="Some Product"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="right"
            android:layout_marginTop="110dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/card_prod_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="143dp"
            android:layout_marginBottom="5dp"
            android:text="Price Info"/>

    </android.support.v7.widget.CardView>



</LinearLayout>