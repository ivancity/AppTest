<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_selector"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_product_item"
            android:layout_width="110dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/txt_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_product_item"
            android:text="Title Test"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="5dp"
            android:maxLines="2" />
        <TextView
            android:id="@+id/txt_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_product_item"
            android:layout_below="@id/txt_product_title"
            android:textSize="15sp"
            android:text="20"
            android:fontFamily="sans-serif-condensed"
            android:textIsSelectable="false"
            android:layout_marginLeft="5dp"
            android:maxLines="1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>